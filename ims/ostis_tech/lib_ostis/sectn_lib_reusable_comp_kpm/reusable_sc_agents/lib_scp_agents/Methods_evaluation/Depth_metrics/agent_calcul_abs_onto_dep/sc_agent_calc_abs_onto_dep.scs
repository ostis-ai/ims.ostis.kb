sc_agent_of_calculation_absolute_ontology_depths
=> nrel_main_idtf:
	[sc-агент подсчета абсолютной глубины онтологии] (* <- lang_ru;; *);
	[sc-agent of calculation absolute ontology depths] (* <- lang_en;; *);

<- abstract_sc_agent;

=> nrel_sc_agent_action_class:
    action_to_calculate_absolute_ontology_depths;

=> nrel_primary_initiation_condition: 
	(sc_event_add_output_arc => action_initiated);

=> nrel_initiation_condition_and_result: 
	(..sc_agent_of_calculation_absolute_ontology_depths_condition => ..sc_agent_of_calculation_absolute_ontology_depths_result);

<= nrel_sc_agent_key_sc_elements: 
	{
	action_initiated;
	action;
	action_to_calculate_absolute_ontology_depths
	};

=> nrel_inclusion: 
	.platform_independent_realization_of_sc_agent_of_calculation_absolute_ontology_depths
	(*
	<- platform_independent_abstract_sc_agent;;
	<= nrel_sc_agent_program: 
		{
		agent_of_calculation_absolute_ontology_depths
		};;

	-> sc_agent_of_calculation_absolute_ontology_depths_scp    
		(* <- active_sc_agent;; *);;  
	*);;

..sc_agent_of_calculation_absolute_ontology_depths_condition
= [*
	action_to_calculate_absolute_ontology_depths _-> .._action;;
	action_initiated _-> .._action;;
	action _-> .._action;;
	.._action _-> .._parameter;;
*];;

..sc_agent_of_calculation_absolute_ontology_depths_result
= [*
	action_to_calculate_absolute_ontology_depths _-> .._action;;
	action_finished _-> .._action;;
	action _-> .._action;;
	.._action _=> nrel_answer:: .._answer;;
	.._action _-> .._parameter;;
*];;
