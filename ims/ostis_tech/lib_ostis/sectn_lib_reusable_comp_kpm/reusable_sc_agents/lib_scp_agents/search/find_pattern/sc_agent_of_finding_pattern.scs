sc_agent_of_finding_pattern
=> nrel_main_idtf:
	[sc-агент поиска конструкций для заданного шаблона] (* <- lang_ru;; *);
	[sc-agent of finding constructions for given pattern] (* <- lang_en;; *);

<- abstract_sc_agent;

=> nrel_sc_agent_action_class:
    action_search_structure_which_is_isomorphic_to_given_pattern;

=> nrel_primary_initiation_condition: 
	(sc_event_add_output_arc => question_initiated);

=> nrel_initiation_condition_and_result: 
	(..sc_agent_of_finding_pattern_condition => ..sc_agent_of_finding_pattern_result);

<= nrel_sc_agent_key_sc_elements: 
	{
	question_initiated;
	question;
	action_search_structure_which_is_isomorphic_to_given_pattern
	};

=> nrel_inclusion: 
	.platform_independent_realization_of_sc_agent_of_finding_pattern
	(*
	<- platform_independent_abstract_sc_agent;;
	<= nrel_sc_agent_program: 
		{
		agent_of_finding_pattern;
		proc_of_finding_intersection_of_two_sets  	
		};;

	-> sc_agent_of_finding_pattern_scp    
		(* <- active_sc_agent;; *);;  
	*);;

..sc_agent_of_finding_pattern_condition
= [*
	action_search_structure_which_is_isomorphic_to_given_pattern _-> .._question;;
	question_initiated _-> .._question;;
	question _-> .._question;;
	.._question _-> .._parameter;;
*];;

..sc_agent_of_finding_pattern_result
= [*
	action_search_structure_which_is_isomorphic_to_given_pattern _-> .._question;;
	question_finished _-> .._question;;
	question _-> .._question;;
	.._question _=> nrel_answer:: .._answer;;
	.._question _-> .._parameter;;
*];;
